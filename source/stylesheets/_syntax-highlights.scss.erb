/*ThankfulEyes, Colorful, Github, Base16, Base16::Solarized (like Octopress), Base16::Monokai, and Monokai*/
<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>

.highlight {
  margin-bottom: 1em;
  font-size: 0.8em;
  -webkit-text-size-adjust: 100%;
  overflow-x:auto;
}

.highlight > table {
  margin: 0;
}

.highlight td.gutter {
  display: none;
}

.highlight td.code {
  padding-left: 10px;
}

@media (min-width: $base-breakpoint) {
  .highlight {
    font-size: 0.9em;
  }

  .highlight td.gutter {
    display: table-cell;
    padding: 0 0.4em;
  }
}
