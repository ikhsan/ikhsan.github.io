<div class="article-previews">
  <ul>
    <% blog.local_articles[0...3].each_with_index do |article, i| %>
    <li>
      <article>
        <h1><%= link_to article.title, article %></h1>
        <%= article.summary %><%= link_to t(:read_more) + " &rarr;", article %>

        <div class="metadata">
          <div class="date">
            <%= link_to article.date.strftime('%b.%e %Y'), article %>
          </div>

          <%= partial "partials/tags", :locals => { :tags => article.tags } %>
        </div>
      </article>
    </li>
    <% end %>
  </ul>
</div>

<h2 class="all-articles"><%= link_to t(:all_articles) + " &rarr;", "/articles.html" %></h2>
