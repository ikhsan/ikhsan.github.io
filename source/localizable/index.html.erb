<ul>
  <% blog.local_articles[0...5].each_with_index do |article, i| %>
    <li>

      <article>
        <h1><%= link_to article.title, article %></h1>
        <p>
          <%= article.summary %>
          <%= link_to t(:read_more) + " &rarr;", article %>
        </p>

        <div class="metadata">
          <div class="date">
            <%= link_to article.date.strftime('%b.%e %Y'), article %>
          </div>

          <%= partial "partials/tags", :locals => { :tags => article.tags } %>
        </div>
      </article>

    </li>
  <% end %>
</ul>
